<script>

 var clicks = 0; 
 function onClick() 
 {
	 clicks += 1; 
	 document.getElementById("clicks").innerHTML = clicks; 
 };
 function clr()
 {
  clicks = 0
  document.getElementById("clicks").innerHTML= clicks;
 };

</script> 

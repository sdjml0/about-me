<script type="text/JavaScript"> 
var i=1;
function change(){
  
  i+=1;
  if(i%2==0){
  document.body.style.backgroundColor="#243447";
  document.getElementById("xxx").innerHTML="Dark";
 document.getElementById("para").style.color="white";
 document.getElementById("xxx").style.backgroundColor="#243447";
 document.getElementById("xxx").style.color="white";
 document.getElementById("container").style.borderColor="white";
 }else
 if(i%2==1){
 document.body.style.backgroundColor="white";
 document.getElementById("xxx").innerHTML="White";
 document.getElementById("para").style.color="#243447";
 document.getElementById("xxx").style.backgroundColor="white";
 document.getElementById("xxx").style.color="black";
 document.getElementById("container").style.borderColor="#243447";
 } 
 }
</script>
